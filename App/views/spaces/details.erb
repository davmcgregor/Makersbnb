<h2>
  <%= flash[:notice] %>
</h2>
<% if @user %>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Booking</h5>
        <p class="card-text"><%= @space.name %></p> 
        <p class="card-text"><%= @space.description %></p> 
        <p class="card-text">Â£<%= @space.price %> per night</p>
        <p class="card-text">Available from <%= (@space.date_start).strftime("%b %d, %Y") %></p>
        <p class="card-text">Available to <%= (@space.date_end).strftime("%b %d, %Y") %></p>
        <form action='/bookings/new' method='post'>
        <input type='date' name='date_start'>
        <input type='date' name='date_end'>
        <input type='submit' value='Book'>
      </form>
    </div>
  </div>

<% else %>
  <form action='/users/new' method='get'>
    <input type='submit' value='Sign Up'>
  </form>
  <form action='/sessions/new' method='get'>
    <input type='submit' value='Sign In'>
  </form>
<% end %>




