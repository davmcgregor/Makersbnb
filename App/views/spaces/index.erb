<h2>
  <%= flash[:notice] %>
</h2>

  <h1>Spaces:</h1>
  <% unless @spaces.nil? %>
      <article class="container"style="width: 100%">
      <div class="row">
        
          <% @spaces.each do |space| %>
            <div class="col-sm-4">
            <div class="card">
            <img src="<%= space.image %>" class="card-img-top">
              <div class="card-header">
                <p><%= space.name %></p> 
              </div>
              <div class="container">
              <div class="card-body">
                <p class="card-text"><%= space.name %></p> 
                <p class="card-text"><%= space.description %></p> 
                <p class="card-text">Â£<%= space.price %> per night</p>
                <p class="card-text">Rented by <%= (User.find_by id: space.user_id).username %> </p>
                <form action="/spaces/<%= space.id %>">
                  <input type='submit' value='More Details'>
                </form>
              </div>
            </div>
            </div>
          </div>
        <% end %>
        
        </div>
      </article>
    
    <form action='/spaces/new'>
      <input type='submit' value='Add a Space'/>
    </form>
<% else %>
  <p>Currently no spaces available</p>
<% end %>
