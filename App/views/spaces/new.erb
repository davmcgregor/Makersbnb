<% if @user %>

<h1>Add a shell</h1>
<form action="/spaces" method="post">
  <label for="name">Property Name</label>
  <input type="text" id="property-name" name="name">
  <label for="description">Description</label>
  <textarea id="description" name="description"></textarea>
  <label for="price">Price: Â£</label>
  <input type="text" id="price" name="price" placeholder="price per night">
  <label for="date_start"> Available from </label>
  <input type='date' name='date_start'>
  <label for="date_end"> Available to</label>
  <input type='date' name='date_end'>

  <input type="submit" value="Add space">
</form>
<% else %>
  <form action='/users/new' method='get'>
    <input type='submit' value='Sign Up'>
  </form>
  <form action='/sessions/new' method='get'>
    <input type='submit' value='Sign In'>
  </form>
<% end %>

